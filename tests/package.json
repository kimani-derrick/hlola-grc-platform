{
  "name": "grc-platform-api-tests",
  "version": "1.0.0",
  "description": "API test suite for GRC Platform",
  "main": "api.test.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:auth": "jest --testNamePattern=\"Authentication\"",
    "test:crud": "jest --testNamePattern=\"Management\"",
    "test:reports": "jest --testNamePattern=\"Reports\"",
    "test:compliance": "jest --testNamePattern=\"Compliance\"",
    "test:automation": "node ../test-automation-setup.js",
    "setup": "node setup-test-env.js",
    "cleanup": "node cleanup-test-data.js"
  },
  "dependencies": {
    "supertest": "^6.3.3",
    "axios": "^1.6.0",
    "jest": "^29.7.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest-environment-node": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setup.js"
    ],
    "testTimeout": 30000,
    "verbose": true
  },
  "keywords": [
    "api",
    "testing",
    "grc",
    "compliance",
    "automation"
  ],
  "author": "GRC Platform Team",
  "license": "MIT"
}
