# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_NAME=hlola_grc_platform
DB_USER=hlola_user
DB_PASSWORD=hlola2025

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:3002

# Storage Configuration
STORAGE_PROVIDER=local  # 'local', 's3', 'azure', 'gcs'
LOCAL_UPLOAD_PATH=./uploads

# AWS S3 Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=your-bucket-name

# Azure Blob Configuration (for production)
AZURE_STORAGE_CONNECTION_STRING=your-connection-string
AZURE_STORAGE_CONTAINER=your-container-name

# Google Cloud Storage Configuration (for production)
GCS_PROJECT_ID=your-project-id
GCS_BUCKET_NAME=your-bucket-name
GCS_KEY_FILE=path/to/service-account-key.json

# File Upload Settings
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,txt,csv,zip,rar

# Compliance Engine Settings
DISABLE_BACKGROUND_CRON=true  # Disable background cron jobs, use real-time checks only
DISABLE_CRON=false  # Set to true to disable all cron jobs in development
